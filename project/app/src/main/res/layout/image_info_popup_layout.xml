 <RelativeLayout
        android:layout_margin="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:padding="5dp"
        android:id="@+id/imageNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textStyle="normal"
            android:layout_weight="0.8"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/imageName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/image_name"
            android:textStyle="normal"
            android:layout_weight="2.2"
            android:textSize="14sp"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:id="@+id/imageTakenDateLayout"
        android:layout_below="@+id/imageNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textStyle="normal"
            android:layout_weight="0.8"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/imageDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textStyle="normal"
            android:layout_weight="2.2"
            android:textSize="14sp"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_below="@+id/imageTakenDateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/geo_tag"
            android:textStyle="normal"
            android:layout_weight="0.8"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/imageGeoTag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No Geo tag found. "
            android:textStyle="normal"
            android:layout_weight="2.2"
            android:textSize="14sp"
            android:ellipsize="end"/>
    </LinearLayout>

</RelativeLayout>