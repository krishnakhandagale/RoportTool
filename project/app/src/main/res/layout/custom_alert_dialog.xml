<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    app:layout_constraintHeight_max="wrap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Please enter name"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:padding="5dp">

            <!--<EditText-->
            <!--android:id="@+id/edtName"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="35dp"-->
            <!--android:layout_marginStart="20dp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_marginEnd="20dp"-->
            <!--android:background="@drawable/round_solid_dim_white_rectangle_with_stroke"-->
            <!--android:gravity="center"-->
            <!--android:hint="Enter name"-->
            <!--android:maxLines="1"-->
            <!--android:fontFamily="@font/roboto"-->
            <!--android:paddingStart="5dp"-->
            <!--android:singleLine="true"-->
            <!--android:textAlignment="textStart"-->
            <!--android:textColor="@color/Black"-->
            <!--android:textColorHint="@color/colorGrayDark"-->
            <!--android:textIsSelectable="true"-->
            <!--android:textSize="14sp" />-->
            <TextView
                android:id="@+id/txtAlertMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Do you want to exit ?"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/back_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#8F8F8F" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".49"
                    android:fontFamily="@font/roboto"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textColor="@color/colorRedMoreDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#8F8F8F" />

                <TextView
                    android:id="@+id/txtDone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:fontFamily="@font/roboto"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="YES"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

