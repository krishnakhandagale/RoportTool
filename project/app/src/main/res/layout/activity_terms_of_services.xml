<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/parentLayoutForMessages">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:titleTextColor="@color/white_color"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            app:layout_scrollFlags=""
            app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="3.3"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@drawable/tos_custom_border">
            <ScrollView
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/txtTos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_services"
                android:clickable="true" />
            </ScrollView>

        </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:gravity="bottom|center"
                android:layout_weight="0.7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <CheckBox
                    android:layout_gravity="bottom"
                    android:layout_marginTop="0dp"
                    android:id="@+id/termsAndCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/i_have_read_and_accept_the_terms_of_services"
                    android:textColor="@color/grayDark"/>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/acceptBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="@string/i_agree"
                            android:textColor="@color/white_color"
                            android:background="@drawable/rounded_button"
                            android:textSize="12sp"
                            />
                        <Button
                            android:layout_marginLeft="5dp"
                            android:id="@+id/dontAcceptBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="@string/don_t_agree"
                            android:textColor="@color/white_color"
                            android:background="@drawable/rounded_button"
                            android:textSize="12sp" />
                    </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
