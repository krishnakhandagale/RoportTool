<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_image_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/submitImageDetails"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_button"
            android:src="@drawable/ic_send_white" />
        <HorizontalScrollView
            android:id="@+id/HorizontalScrollView01"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scrollbarSize="2dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckedTextView
                    android:id="@+id/isPointOfOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_chip_drawable_gray"
                    android:text="@string/point_of_origin"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <CheckedTextView
                    android:id="@+id/isDamageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/shape_chip_drawable_gray"
                    android:text="@string/damage"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <CheckedTextView
                    android:id="@+id/isOverviewTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/shape_chip_drawable_gray"
                    android:text="@string/overview"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/selectLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:minLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/shape_chip_drawable_gray"
                    android:text="@string/select_label"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/camera"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="5dp"
                    android:src="@drawable/ic_add_a_photo_blue" />
                <ImageButton
                    android:id="@+id/imageInfo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="5dp"
                    android:src="@drawable/ic_info_black_24dp" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/imageCoverageType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_edit_text"
            android:drawableEnd="@drawable/ic_key_arrow_down"
            android:drawableRight="@drawable/ic_key_arrow_down"
            android:imeOptions="actionNext"
            android:nextFocusRight="@+id/clickedImageTitle"
            android:padding="7dp"
            android:text="@string/coverage_type"
            android:textSize="16sp"
            tools:ignore="TextViewEdits" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/linear_layout_border"
            android:orientation="horizontal"
            android:weightSum="4">

            <EditText
                android:id="@+id/clickedImageDescription"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="3.4"
                android:background="@null"
                android:hint="@string/enter_note"
                android:imeOptions="actionDone"
                android:inputType="textImeMultiLine"
                android:padding="5dp"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/lastNote"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@null"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_last_note" />

            <ImageButton
                android:id="@+id/freqNotes"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@null"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_key_arrow_down" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>