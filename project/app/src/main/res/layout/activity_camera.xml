<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.electivechaos.claimsadjuster.CameraActivity">

    <com.camerakit.CameraKitView
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:keepScreenOn="false"
        app:camera_flash="torch"
        app:camera_facing="back"
        app:camera_focus="continuous"
        app:camera_permissions="camera" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/capture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="capture"
        app:backgroundTint="#B7BEC0C1"
        app:rippleColor="@color/colorPrimary"
        android:layout_margin="10dp"
        android:layout_gravity="bottom|center"/>

    <ImageButton
        android:id="@+id/btn_front_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_gravity="end"
        android:background="@drawable/rounded_camera_switch_background"
        android:src="@drawable/ic_swap_vert_black_24dp"
        />


    <ImageView
        android:visibility="invisible"
        android:id="@+id/btn_flash_on"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:camera_flash="off"
        android:layout_margin="10dp"
        android:layout_gravity="start"
        android:background="@drawable/rounded_camera_switch_background"
        android:src="@drawable/ic_flash_on_black_24dp"/>

    <ImageView
        android:visibility="visible"
        android:id="@+id/btn_flash_off"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:camera_flash="on"
        android:layout_margin="10dp"
        android:layout_gravity="start"
        android:background="@drawable/rounded_camera_switch_background"
        android:src="@drawable/ic_flash_off_black_24dp"/>

</android.support.design.widget.CoordinatorLayout>
